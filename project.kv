WindowManager:
    FirstWindow:
    SecondWindow:

<FirstWindow>
    name: "first"
    BoxLayout:
        orientation: 'vertical'
        spacing: 1
        BoxLayout:
            size_hint_y: 1/5
            canvas.before:
                Color:
                    rgba:  0, 0, 0, 1
                Rectangle:
                    pos: self.pos
                    size: self.size[0], 2
            MDIconButton:
                icon: 'magnify'
                size_hint_y: 1
                on_press: app.search()
            SearchTextInput:
                id: Search_TextInput_id
                size_hint_y: .97
                pos_hint:{ 'left':0 , 'top': 1}
                hint_text: 'search topic'
                hint_text_color: 1,1,1,1
                icon_left: 'magnify'
                mode: "fill"
                helper_text_mode: "persistent"
                helper_text: "Search"
                line_color: [1,1,1,1]
                color_normal: [1,1,1,1]

                font_size: .35 * self.height
                active_line: False
                multiline: False

            MDIconButton:
                icon: 'close'
                size_hint_y:1
                text_color: 0,0,0,1
                on_press:
                    app.erase()
                    root.ids.Search_TextInput_id.text = ''

        BoxLayout:
            orientation: 'vertical'
            padding: 4
            RecycleView:
                viewclass: 'Search_Select_Option'
                data:app.rv_data
                RecycleBoxLayout:
                    spacing: 15
                    padding : 10
                    default_size: None, None
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: 'vertical'
        BoxLayout:
            size_hint : 1,0.2
            Button:
                text: "ADD ISSUE"
                on_release: app.root.current = "second"

<SecondWindow>:
    name: "second"
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        TextInput:
            id: Issue_Topic_id
            hint_text: 'Enter issue topic'
            multiline: False
            font_size: 20

        TextInput:
            id: Issue_Description_id
            hint_text: 'Enter issue description'
            multiline: False
            font_size: 20

        Button:
            size_hint : 1,0.3
            text: "UPLOAD ISSUE"
            font_size: 20
            on_press:
                app.insert_issue_to_db(root.ids.Issue_Topic_id.text, root.ids.Issue_Description_id.text)


        Button:
            size_hint : 1,0.3
            text: "GO BACK"
            font_size: 20
            on_release: app.root.current = "first"